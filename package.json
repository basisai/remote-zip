{
  "name": "esbuild-quickstart",
  "version": "1.0.0",
  "main": "index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "author": "Ng Guoyou <gyng@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "d": "WATCH=1 yarn build",
    "build": "rm -rf lib/* && yarn ts-types && node ./esbuild.js",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "lint:fix": "yarn lint:prettier:fix && yarn lint:eslint:fix",
    "lint:eslint": "eslint . --ext .js --ext .jsx --ext .ts --ext .tsx",
    "lint:eslint:fix": "yarn lint:eslint --fix",
    "lint:prettier": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "t": "yarn test",
    "t:watch": "yarn test --watch",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "ts-types": " tsc --emitDeclarationOnly --outDir lib"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "esbuild": "^0.13.12",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4"
  }
}
